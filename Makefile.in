.PHONY: clean test
all: %DESTDIR%/Inline/pyhelper%SO%
clean:
	rm %DESTDIR%/Inline/pyhelper%SO%
%DESTDIR%/Inline/pyhelper%SO%: pyhelper.c
	%CC% pyhelper.c -Wall -I"%INCLUDEPY%" -L"%LIBPLPY%" -l%LIBRARYPY% `perl -MExtUtils::Embed -e ccopts -e ldopts` -shared -o %DESTDIR%/Inline/pyhelper%SO% %CCSHARED% -g
test: all
	prove -e 'perl6 -Ilib' t
